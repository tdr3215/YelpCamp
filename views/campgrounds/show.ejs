<% layout('layouts/boilerplate') %>

<div class="row">
  <div class="col-6">
    <div class="card mb-3">
      <img src="<%= campgrounds.image %> " class="card-img-top" alt="..." />
      <div class="card-body">
        <h5 class="card-title"><%= campgrounds.title %></h5>
        <p class="card-text"><%= campgrounds.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-muted"><%= campgrounds.location %></li>
        <li class="list-group-item text-muted">
          $<%= campgrounds.price %>/night
        </li>
      </ul>
      <div class="card-body">
        <a
          class="card-link btn btn-info"
          href="/campgrounds/<%= campgrounds._id %>/edit "
          >Edit</a
        >

        <form
          action="/campgrounds/<%= campgrounds._id %>?_method=DELETE"
          method="POST"
          class="d-inline"
        >
          <button class="btn btn-danger">Delete Campground</button>
        </form>
      </div>
    </div>
  </div>
  <div class="col-6">
    <!-- Reviews -->
    <h2>Leave a Review</h2>
    <form
      action="/campgrounds/<%=campgrounds._id%>/reviews"
      method="POST"
      class="mb-3 validated-form"
      novalidate
    >
      <div class="md-3">
        <div class="mb-3">
          <label class="form-label" for="rating">Rating</label>
          <input
            class="form-range"
            type="range"
            min="1"
            max="5"
            name="review[rating]"
            id="rating"
          />
        </div>
        <label class="form-label" for="body">Review</label>
        <textarea
          class="form-control mb-3"
          name="review[body]"
          id="body"
          cols="30"
          rows="3"
          required
        ></textarea>
        <div class="valid-feedback">Looks good!</div>
      </div>

      <button class="btn btn-success">Submit</button>
    </form>
    <% for(let review of campgrounds.reviews){%>
    <div class="mb-3 card">
      <div class="card-body">
        <h5 class="card-title">Rating: <%=review.rating %></h5>
        <p class="card-text">Review: <%=review.body %></p>
      </div>
    </div>
    <% } %>
  </div>
</div>

<footer>
  <a href="/campgrounds">Back to Index</a>
</footer>
