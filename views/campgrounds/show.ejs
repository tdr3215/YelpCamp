<% layout('layouts/boilerplate') %>

<h1><%= campgrounds.title %></h1>
<h2><%= campgrounds.location %></h2>
<img src="<%= campgrounds.image %> " alt="" />
<p><%= campgrounds.description %></p>
<footer>
  <a href="/campgrounds">Back to Index</a>
  <a href="/campgrounds/<%= campgrounds._id %>/edit ">Edit</a>
  <hr />
  <div>
    <form
      action="/campgrounds/<%= campgrounds._id %>?_method=DELETE"
      method="POST"
    >
      <button>Delete Campground</button>
    </form>
  </div>
</footer>
